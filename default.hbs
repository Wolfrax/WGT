    {{! Figure caption hack by MM May 2018 }}
    <script>
        // Creates Captions from Alt tags
        $(".post-content img").each(
                function () {
                    // Let's put a caption if there is one
                    if ($(this).attr("alt")) {
                        if ($(this).attr("alt").indexOf("Right!") == 0) {
                            $(this).wrap(
                                    '<figure class="rightImage"></figure>'
                            ).after(
                                    '<figcaption class="caption">' +
                                    $(this).attr("alt").substring(6) +
                                    '</figcaption>'
                            );
                        }
                        else if ($(this).attr("alt").indexOf("Left!") == 0) {
                            $(this).wrap(
                                    '<figure class="leftImage"></figure>'
                            ).after(
                                    '<figcaption class="caption">' +
                                    $(this).attr("alt").substring(5) +
                                    '</figcaption>'
                            );
                        }
                        else {
                            if ($(this).attr("alt")) {
                                $(this).wrap(
                                        '<figure class="image"></figure>'
                                ).after(
                                        '<figcaption class="caption">' +
                                        $(this).attr(
                                                "alt") +
                                        '</figcaption>'
                                );
                            }
                        }
                    }
                });
    </script>

